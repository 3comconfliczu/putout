{
    "match": {
        "**/packages/{remark-putout,engine-processor,{plugin,processor}-*}": {
            "putout": "on",
            "putout/check-replace-code": "off"
        },
        "**/packages/plugin-*/*.md{json}": {
            "putout-config": "on"
        }
    },
    "rules": {
        "remove-useless-spread/object": ["on", {
            "exclude": "module.exports.rules = __"
        }]
    },
    "ignore": [
        ".husky"
    ]
}
