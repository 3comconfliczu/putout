{
    "rules": {
        "putout/align-spaces": "error"
    },
    "overrides": [{
        "files": ["test/*.mjs", "lib/putout/index{.js,.spec.js}"],
        "rules": {
            "node/no-missing-require": "off",
            "node/no-missing-import": "off"
        }
    }],
    "extends": [
        "plugin:node/recommended",
        "plugin:eslint-plugin/recommended",
        "plugin:putout/safe"
    ],
    "plugins": [
        "eslint-plugin",
        "node",
        "putout"
    ]
}
