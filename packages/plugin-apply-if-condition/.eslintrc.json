{
    "overrides": [{
        "files": "*.md{js}",
        "rules": {
            "nonblock-statement-body-position": "off",
            "indent": "off",
            "padding-line-between-statements": ["error", {
                "blankLine": "never",
                "prev": "if",
                "next": "expression"
            }]
        }
    }],
    "extends": [
        "plugin:node/recommended",
        "plugin:putout/recommended"
    ],
    "plugins": [
        "node",
        "putout"
    ]
}
