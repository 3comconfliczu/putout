{
    "env": {
        "es6": true,
        "node": true,
    },
    "parserOptions": {
        "ecmaVersion": 2018,
    },
    "rules": {
        "indent": ["error", 4],
        "semi": "error",
        "no-use-before-define": ["error", "nofunc"],
        "no-console": 0,
        "no-multiple-empty-lines": [
            "error", {
                "max": 1
            }]
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "plugins": [
        "node"
    ]
}
