{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "prefer-const": "error",
        "no-var": "error",
        "arrow-spacing": "error",
        "indent": ["error", 4],
        "implicit-arrow-linebreak": "error",
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true
        }],
        "semi": "error",
        "object-shorthand": "error",
        "prefer-arrow-callback": "error",
        "no-useless-rename": "error",
        "no-use-before-define": 0,
        "no-multiple-empty-lines": [
            "error", {
                "max": 1
            }]
    },
    "extends": [
        "eslint:recommended"
    ]
}

